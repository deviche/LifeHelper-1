<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_video_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mVideoView"
    android:orientation="vertical"
    android:padding="@dimen/common_padding">

    <!--视频详情头布局-->

    <TextView
        android:id="@+id/mVideoTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_size_14"
        tools:text="涂鸦魅力：废弃工厂酷炫「变装秀」！"/>

    <TextView
        android:id="@+id/mVideoInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_padding_small"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_size_12"
        tools:text="#创意 / 01'45'' / 开眼精选"/>

    <TextView
        android:id="@+id/mVideoDesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_padding_small"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_size_12"
        tools:text="这里是涂鸦艺术视频的精选账号，欢迎各位喜欢涂鸦和大型绘画艺术的朋友"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_10">

        <TextView
            android:id="@+id/mCollectTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableStart="@drawable/ic_toolbar_like_h"
            android:gravity="center_vertical"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_size_12"
            tools:text="1101"/>

        <TextView
            android:id="@+id/mShareTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableStart="@drawable/icon_share_white"
            android:gravity="center_vertical"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_size_12"
            tools:text="1101"/>

        <TextView
            android:id="@+id/mCommentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableStart="@drawable/icon_comment_white"
            android:gravity="center_vertical"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_size_12"
            tools:text="34"/>

    </LinearLayout>

    <View
        android:id="@+id/view_video_first_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/color_ffffff"/>

</LinearLayout>