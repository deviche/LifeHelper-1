<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/common_margin"
              android:background="@color/color_ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_padding_small"
        android:paddingStart="@dimen/common_padding"
        android:paddingTop="@dimen/common_padding_small">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mUserIcon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:src="@drawable/splash_bg"/>

        <TextView
            android:id="@+id/mUserNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/common_padding_middle"
            android:paddingStart="@dimen/common_padding_middle"
            android:textColor="@color/color_949494"
            android:textSize="@dimen/font_size_14"
            tools:text="用户名"/>

        <ImageView
            android:id="@+id/iv_joke_is_hot"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_15"
            android:src="@drawable/icon_joke_hot"
            android:visibility="gone"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_share_video"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:layout_marginEnd="@dimen/common_margin_middle"
            android:src="@drawable/icon_share_funny_video"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_joke_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_padding_middle"
        android:paddingEnd="@dimen/common_padding"
        android:paddingStart="@dimen/common_padding"
        android:textColor="@color/color_1e1e1e"
        android:textSize="@dimen/font_size_16"
        tools:text="段子内容"/>

    <com.xfhy.joke.widget.SampleCoverVideo
        android:id="@+id/mVideoView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250"/>


</LinearLayout>