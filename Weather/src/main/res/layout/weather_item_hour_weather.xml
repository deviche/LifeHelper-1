<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/dimen_70"
              android:layout_height="@dimen/dimen_100"
              android:background="@color/transparent"
              android:gravity="center"
              android:orientation="vertical"
              tools:background="@color/color_1e1e1e">

    <!--小时 天气 item-->
    <TextView
        android:id="@+id/mHourTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_padding_middle"
        android:paddingTop="@dimen/common_padding_middle"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_size_12"
        tools:text="19:00"/>

    <ImageView
        android:id="@+id/iv_hour_weather_img"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_icon_load_error"/>

    <TextView
        android:id="@+id/tv_hour_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_padding_small"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_size_14"
        tools:text="24°C"/>

</LinearLayout>